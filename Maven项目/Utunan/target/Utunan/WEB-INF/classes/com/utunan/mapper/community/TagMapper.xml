<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.utunan.mapper.community.TagMapper">
    <resultMap id="tagResultMap" type="com.utunan.pojo.community.Tag">
        <id column="tagId" property="tagId"/>
        <result property="tagName" column="tagName"/>
        <collection property="quizTag" javaType="java.util.List" ofType="com.utunan.pojo.community.QuizTag">
            <id property="quizTagId" column="quizTagId"/>
            <result property="quizId" column="quizId"/>
            <result property="tagId" column="tagId"/>
        </collection>
    </resultMap>
    <!--根据问题数量查询前10个标签-->
    <select id="top10Tag" resultMap="tagResultMap">
        select
        t.tagId, t.tagName
        from tag t
        join quiz_tag qt on t.tagId=qt.tagId
        group by qt.tagId
        order by count(qt.quizId) desc
        limit 10
    </select>
    <!--统计引用数量最高的10个标签的数量-->
    <select id="top10TagNumber" resultType="java.lang.Long">
        select
        count(quizId) tagNumber
        from quiz_tag
        group by tagId
        order by count(quizId) desc
        limit 10
    </select>
    <!--根据搜索条件查询标签-->
    <select id="findTagListBySearch" resultType="com.utunan.pojo.community.Tag">
        select *
        from tag
        where tagName like #{searchValue}
    </select>
    <!--根据搜索条件统计标签数量-->
    <select id="countTagBySearch" resultType="java.lang.Long">
        select count(*)
        from tag
        where tagName like #{searchValue}
    </select>
</mapper>