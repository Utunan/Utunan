<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.utunan.mapper.user.UserMapper">
    <select id="queryByPermit" resultType="com.utunan.pojo.user.User">
        select *
        from user
        where (
        userTelephone=#{userTelephone}
        or
        userEmail=#{userEmail}
        )
        and
        userPassword=#{userPassword}
    </select>
    <select id="findByPermit" resultType="com.utunan.pojo.user.User">
        select *
        from user
        where
        userTelephone=#{userTelephone}
        or
        userEmail=#{userEmail}
    </select>
    <select id="insert">
        insert into user(userTelephone,userPassword,userIdentity)
        values(#{userTelephone},#{userTelephone},3)
    </select>
</mapper>